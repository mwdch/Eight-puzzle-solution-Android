<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="?colorOnPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?background">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/developer_name"
                android:textColor="?colorOnSurface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/student_number"
                android:textColor="?colorOnSurface"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/divider"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <GridLayout
                android:id="@+id/startGridLayout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:columnCount="3"
                android:rowCount="3"
                app:layout_constraintEnd_toStartOf="@+id/goalGridLayout"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8">

                <TextView
                    android:id="@+id/index0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/index1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="1" />

                <TextView
                    android:id="@+id/index2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="2" />

                <TextView
                    android:id="@+id/index3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="3" />

                <TextView
                    android:id="@+id/index4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="4" />

                <TextView
                    android:id="@+id/index5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="5" />

                <TextView
                    android:id="@+id/index6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="6" />

                <TextView
                    android:id="@+id/index7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="7" />

                <TextView
                    android:id="@+id/index8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    tools:text="8" />

            </GridLayout>

            <GridLayout
                android:id="@+id/goalGridLayout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:columnCount="3"
                android:rowCount="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/startGridLayout"
                app:layout_constraintTop_toBottomOf="@+id/textView9">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:text="@string/one"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:text="@string/two"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:text="@string/three"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:text="@string/four"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:text="@string/five"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:text="@string/six"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:text="@string/seven"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_number"
                    android:gravity="center"
                    android:text="@string/eight"
                    android:textColor="?colorOnPrimary"
                    android:textSize="32sp"
                    android:textStyle="bold" />

            </GridLayout>

            <Button
                android:id="@+id/btnChangeStartState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/change_start_state"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/goalGridLayout"
                app:layout_constraintStart_toStartOf="@+id/startGridLayout"
                app:layout_constraintTop_toBottomOf="@+id/startGridLayout" />

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnChangeStartState" />

            <FrameLayout
                android:id="@+id/layoutOperations"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_recyclerview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <TextView
                    android:id="@+id/tvEmptyState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/empty_view"
                    android:textColor="?colorOnSurface"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/operations"
                android:textColor="?colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rgAlgorithm" />

            <Button
                android:id="@+id/btnStartOperation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/start"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="@+id/rgAlgorithm"
                app:layout_constraintStart_toStartOf="@+id/rgHeuristic"
                app:layout_constraintTop_toBottomOf="@+id/rgHeuristic" />

            <TextView
                android:id="@+id/tvActionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="?colorOnSurface"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutOperations"
                tools:text="Actions: 5" />

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="?colorOnSurface"
                app:layout_constraintStart_toEndOf="@+id/tvExpandedNodes"
                app:layout_constraintTop_toBottomOf="@+id/layoutOperations"
                tools:text="Costs: 10" />

            <TextView
                android:id="@+id/tvExpandedNodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:textColor="?colorOnSurface"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvActionNumber"
                app:layout_constraintVertical_bias="0"
                tools:text="Expanded Nodes: 15" />

            <TextView
                android:id="@+id/tvDepth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:textColor="?colorOnSurface"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvExpandedNodes"
                app:layout_constraintTop_toBottomOf="@+id/tvCost"
                app:layout_constraintVertical_bias="0"
                tools:text="Depth: 8" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/start_state"
                android:textColor="?colorOnSurface"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/startGridLayout"
                app:layout_constraintStart_toStartOf="@+id/startGridLayout"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/goal_state"
                android:textColor="?colorOnSurface"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/goalGridLayout"
                app:layout_constraintStart_toStartOf="@+id/goalGridLayout"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <RadioGroup
                android:id="@+id/rgAlgorithm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider1">

                <RadioButton
                    android:id="@+id/rbUniformCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/uniform_cost_search" />

                <RadioButton
                    android:id="@+id/rbIterativeDeepening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/iterative_deepening_search" />

                <RadioButton
                    android:id="@+id/rbAStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a_star" />

                <RadioButton
                    android:id="@+id/rbIDAStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ida_star" />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rgHeuristic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@+id/rgAlgorithm"
                app:layout_constraintTop_toBottomOf="@+id/divider1">

                <RadioButton
                    android:id="@+id/rbHeuristic1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="@string/heuristic1" />

                <RadioButton
                    android:id="@+id/rbHeuristic2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heuristic2" />

            </RadioGroup>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/avatar"
                app:civ_border_color="?colorOnSurface"
                app:civ_border_width="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>